<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_date_default"
        android:inputType="date"
        android:key="@string/settings_date_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_date_label" />

    <ListPreference
        android:key="@string/settings_tag_key"
        android:title="@string/settings_tag_label"
        android:entries="@array/Tags"
        android:entryValues="@array/Tags"/>
</PreferenceScreen>